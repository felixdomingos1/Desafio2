{
  "compilerOptions": {
    "moduleResolution": "node",
    // "module": "ES2020", 
    "module": "ESNext", 
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules"]
}
